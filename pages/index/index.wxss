page{
  width: 100%;
}
.view-top{
  height:80rpx;
  width:100%;
  padding:10rpx;
  background-color:#D43C33;
  color:white;
  line-height: 80rpx;
  display: inline-block;
}
.userHead{
  float:left;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  display: inline-block;
}
.username{
  float:left;
  margin-left:20rpx;
  display: inline-block
}
.topBar{
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  margin-right:20rpx;
}
.barImg{
  width:60rpx;
  height:60rpx;
  margin-left:40rpx;
  display: inline-block;
}
.slider,.slider image,.slider swiper{
  width:100%;
