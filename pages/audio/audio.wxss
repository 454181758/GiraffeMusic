/* pages/audio/audio.wxss */
.bg{
    position: absolute;
    left:0;
    top: 0;
    z-index: -10;
    width: 100%;
    height: 100%;
    background:  no-repeat left top;
     background-size: 110% 110%;  
    background-color: rgba(63,63,62,0.1);
    filter: blur(20px);
}

page,.body{
  height:100%;
}

.body{
  display: flex;
  flex-direction: column;
}

.sing-brief{
  width:100%;
  height:120rpx;
  border-bottom: 1rpx solid white; 
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.sing-brief .sing-name{
  font-size: 16px;
  color:white;
}
.sing-brief .singer-name{
  font-size: 13px;
  color:white;
}

.sing-show{
  position: relative;
  width:100%;
  height:85%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.coverImgStick{
  position: absolute;
  top:10%;
  left: 50%;
  width: 100rpx;
  height:130rpx;
  transform: translate(-20%,-50%) rotate(-20deg);
  transform-origin: top;

}
.coverImgBg{
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: -1;
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}

.control-bottom{
  position: absolute;
  bottom:25rpx;
  left:0;
  display: flex;
  margin: 40rpx;
  width: 100%;
  justify-content: space-around
}
.control-bottom-view image{
  width:70rpx;
  height:70rpx;
}

.control-bottom-view.control-type image{
    position: absolute;
    left:0;
    bottom:12rpx;
}
.surprise{
  margin-right:20rpx;
}